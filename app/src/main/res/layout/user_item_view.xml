<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_item">


        <ImageView
            android:id="@+id/imgViewUser"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/imgViewUser"
            app:layout_constraintTop_toTopOf="@+id/imgViewUser"
            android:layout_toRightOf="@id/imgViewUser"
            android:layout_toLeftOf="@id/imageViewNext">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:textSize="14dp"
                android:text="@string/user_name" />

            <TextView
                android:id="@+id/tv_contact_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:textSize="14dp"
                android:text="@string/user_contact" />


            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:textSize="14dp"
                android:text="@string/user_email" />

<!--            <Button-->
<!--                android:id="@+id/btn_delete"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignParentBottom="true"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:layout_marginBottom="16dp"-->
<!--                android:layout_marginRight="10dp"-->
<!--                android:gravity="center|center_vertical"-->
<!--                android:backgroundTint="@color/white"-->
<!--                android:textColor="@android:color/black"-->
<!--                android:text="@string/btn_delete" />-->

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewNext"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/next"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp" />
    </RelativeLayout>


</RelativeLayout>