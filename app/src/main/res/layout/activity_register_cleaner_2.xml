<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register_cleaner_2"
    android:orientation="vertical"
    android:background="@color/main"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:gravity="bottom"
        android:text="Register as Cleaner"
        android:textSize="30dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#8C8787"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/registerImage"
            android:textSize="18dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageC"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/add_image"
            android:clickable="true"
            android:layout_weight="3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/registerEmail"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/emailC"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_text"
            android:hint="exmaple@email.com"
            android:inputType="textEmailAddress"
            android:padding="6dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/registerContactNo"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/contactC"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_text"
            android:hint="eg: 0123456789"
            android:inputType="textEmailAddress"
            android:padding="6dp" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/registerUsername"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/usernameC"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_text"
            android:hint="Tan"
            android:padding="6dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/registerPassword"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/passwordC"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_text"
            android:inputType="textPassword"
            android:padding="6dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/registerConfPassword"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/confPasswordC"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_text"
            android:inputType="textPassword"
            android:padding="6dp" />
    </LinearLayout>

    <Button
        android:id="@+id/registerCleanerCreateAccountBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/registerBtnCreateAccount"
        app:iconPadding="10dp"
        android:background="@color/purple_700"/>

    <Button
        android:id="@+id/registerCleanerLoginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/registerBtnToLogin"
        app:iconPadding="10dp"
        android:background="@color/purple_700"/>
</LinearLayout>